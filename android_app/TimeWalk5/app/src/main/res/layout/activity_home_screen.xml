<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.chronos.timewalk.HomeScreen">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="904"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/home_screen_btn_explore"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="300"
            android:background="@drawable/explore"
            android:fontFamily="serif"
            android:text="Explore"
            android:textAlignment="center"
            android:textSize="24sp"
            android:shadowColor="@color/commonWhite"
            android:shadowDx="10"
            android:shadowDy="2"
            android:shadowRadius="10"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@android:color/black"/>

        <Button
            android:id="@+id/home_screen_btn_discover"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="300"
            android:background="@drawable/discover"
            android:fontFamily="serif"
            android:text="Discover"
            android:shadowColor="@color/commonWhite"
            android:shadowDx="10"
            android:shadowDy="2"
            android:shadowRadius="10"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@android:color/black"/>

        <Button
            android:id="@+id/home_screen_btn_journeys"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="300"
            android:background="@drawable/personalise"
            android:fontFamily="serif"
            android:shadowColor="@color/commonWhite"
            android:shadowDx="10"
            android:shadowDy="2"
            android:shadowRadius="10"
            android:text="My Journeys"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
