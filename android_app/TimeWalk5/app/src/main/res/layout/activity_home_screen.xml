<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.chronos.timewalk.HomeScreen">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="90">

        <Button
            android:id="@+id/home_screen_btn_explore"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:background="@drawable/explore"
            android:text="Explore"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/home_screen_btn_discover"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:background="@drawable/discover"
            android:text="Discover" />

        <Button
            android:id="@+id/home_screen_btn_personalise"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:background="@drawable/personalise"
            android:text="Personalise" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
